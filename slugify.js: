// Перетворює рядок у URL-slug
function slugify(str){
  return String(str)
    .toLowerCase()
    .normalize('NFD').replace(/[\u0300-\u036f]/g,'')
    .replace(/[^a-z0-9]+/g,'-')
    .replace(/^-+|-+$/g,'');
}

if (require.main === module) {
  const input = process.argv.slice(2).join(' ') || 'Hello Web3!';
  console.log(slugify(input));
}

module.exports = slugify;
